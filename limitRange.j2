apiVersion: v1
kind: LimitRange
metadata:
  name: core-resource-limits 
spec:
  limits:
    - type: Pod
      max:
        cpu: {{ size.limit_cpu }}  
        memory: {{ size.limit_memory }}  
    - type: Container
      max:
        cpu: {{ size.limit_cpu }}  
        memory: {{ size.limit_memory }}  
 